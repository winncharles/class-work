<body>
    <!-- header section -->
    <div id="header">
        <h2>Java Script | Odd Numbers Between</h2>
    </div>

    <!-- data entry section-->
    <div id="data_entry">        
            Odd Numbers between 
            <input type="text" id="first_no" size="5" autofocus> and 
            <input type="text" id="second_no" size="5"> 
            <input type="button" value="S h o w" onclick="findOdds()">                
    </div>

    <!-- output section-->
    <div id="odd_output"></div>

    <script>
        function findOdds()
        {
          //get the field values
          let fno = document.getElementById('first_no').value;
          let sno = document.getElementById('second_no').value;

          //convert data to int type
          fno = parseInt(fno);
          sno = parseInt(sno);
          
          let res = '';

          let rem = fno%2;  
          if(rem==0){
            fno = fno+1;
          }//if close
          else{
            fno = fno+2;
          }//else close
          
          while(fno < sno)
          {             
              res = `${res}${fno}, `
              fno = fno+2;
          }//while close

          document.getElementById('odd_output').innerHTML = res;
        }//function end
    </script>
